extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="title", placeholder="Title", required, type="text",value=`${video.title}`)
        input(name="description", placeholder="Description", required, type="text",value=`${video.description}`)
        input(name="hashtags", placeholder="Hashtags seperated by comma.", required, type="text",value=`${video.hashtags.join()}`)
        input(type="submit", value="Update video")